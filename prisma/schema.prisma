enum Role {
  ADMIN
  SUBADMIN
  USER
  TECHNICAL
}

enum RequestStatus {
  PENDING
  ASSIGNED
  QUOTED
  IN_PROGRESS
  COMPLETED
  REJECTED
}

enum SMSStatus {
  SENT
  DELIVERED
  FAILED
  RECEIVED
}

enum typeEpaid {
  MTN_CACH
  SYRIATEL_CACH
}
